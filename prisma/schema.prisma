generator client {
  provider = "prisma-client"
  output   = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  // url      = env("DATABASE_URL")
}

model Service {
  id          String   @id @map("_id") @default(auto()) @db.ObjectId
  name        String
  category    String   // "Event", "Catering", "Pop-up"
  description String
  price       Float
  image       String?
  date        DateTime?
  createdAt   DateTime @default(now())
}